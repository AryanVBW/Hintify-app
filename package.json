{
  "name": "hintify",
  "version": "1.0.21",
  "description": "Hintify – Your intelligent study companion for instant homework hints and guidance",
  "main": "src/main.js",
  "author": {
    "name": "AryanVBW",
    "email": "demo@hintify.app",
    "url": "https://github.com/AryanVBW/Hintify"
  },
  "license": "MIT",
  "homepage": "https://github.com/AryanVBW/Hintify-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/AryanVBW/Hintify-app.git"
  },
  "keywords": [
    "education",
    "ai",
    "study",
    "homework",
    "hints",
    "ocr",
    "electron",
    "desktop",
    "assistant"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron . --development",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-mac-arm64": "electron-builder --mac --arm64",
    "build-mac-arm64-signed": "APPLE_SIGNING=1 bash scripts/build-mac-arm64.sh",
    "build-mac-arm64-dev": "electron-builder --mac --arm64 --config=electron-builder-dev.json",
    "build-mac-unsigned": "electron-builder --mac --config.mac.identity=null --config.afterSign=null",
    "build-mac-arm64-prod-unsigned": "SKIP_NOTARIZE=1 ELECTRON_BUILDER_DISABLE_CODE_SIGNING=true CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg zip --arm64 --publish never",
    "build-mac-dev": "electron-builder --mac --config=electron-builder-dev.json",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@clerk/backend": "^2.19.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.3",
    "@mui/material": "^7.3.2",
    "@neondatabase/serverless": "^1.0.1",
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.6.2",
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.22",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "keytar": "^7.9.0",
    "lottie-web": "^5.13.0",
    "lucide-react": "^0.544.0",
    "ogl": "^1.0.11",
    "pg": "^8.16.3",
    "postprocessing": "^6.37.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tesseract.js": "^5.0.6",
    "three": "^0.180.0"
  },
  "build": {
    "appId": "com.hintify.snapassist",
    "productName": "Hintify",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright © 2025 AryanVBW",
    "protocols": [
      {
        "name": "hintify",
        "schemes": [
          "hintify"
        ]
      },
      {
        "name": "myapp-protocol",
        "schemes": [
          "myapp"
        ]
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AryanVBW",
        "repo": "Hintify-app",
        "private": false
      }
    ],
    "files": [
      "src/**/*",
      "assets/**/*",
      "!assets/*.ico",
      "!assets/*.icns",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/tesseract.js/**",
      "node_modules/tesseract.js-core/**",
      "assets/tessdata/**"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSHumanReadableCopyright": "© 2025 AryanVBW — demo@hintify.app"
      }
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Education",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hintify"
    },
    "dmg": {
      "title": "Hintify",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
