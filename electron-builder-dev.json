{
  "extends": null,
  "appId": "com.hintify.snapassist.dev",
  "productName": "Hintify (Dev)",
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "copyright": "Copyright © 2025 AryanVBW",
  "protocols": [
    {
      "name": "hintify",
      "schemes": ["hintify"]
    },
    {
      "name": "myapp-protocol",
      "schemes": ["myapp"]
    }
  ],
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "src/**/*",
    "assets/**/*",
    "!assets/*.ico",
    "!assets/*.icns",
    "node_modules/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "node_modules/tesseract.js/**",
    "node_modules/tesseract.js-core/**",
    "assets/tessdata/**"
  ],
  "extraResources": [
    {
      "from": "assets/",
      "to": "assets/",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.education",
    "icon": "build/icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ],
    "darkModeSupport": true,
    "gatekeeperAssess": false,
    "hardenedRuntime": false,
    "extendInfo": {
      "NSHumanReadableCopyright": "© 2025 AryanVBW — demo@hintify.app"
    }
  },
  "dmg": {
  "title": "Hintify (Dev)",
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  }
}